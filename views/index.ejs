}


.card {
  flex-shrink: 0;
  width: 300px;
  height: 400px;
  border-radius: 4px;
  box-shadow: 0 0 5px 0 rgba(0, 0, 0, 1);
  justify-content: space-between;
  background-color: var(--);
  padding: 30px;
  font-size: 10px;
  margin-left: -50px;
  transition: 0.2s;
  z-index: 1;
  overflow: hidden;
  position: relative;

}

.card .tags a {
  display: inline-block;
  border: solid 3px var(--quintary);
  border-radius: 30px;
  padding: 8px 25px;
  text-transform: uppercase;
  color: var(--tertiary);
  font-weight: bold;
  text-decoration: none;
  margin-bottom: 3px;
  transition: all ease-out 0.3s;
}

.card .tags a:hover {
  border-color: #fff;
  color: var(--quaternary);
}

.card:hover {
  transform: translateY(-20px);
  margin-right: 150px;
}


